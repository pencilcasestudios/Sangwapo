# Guard for testing
gem cleanup
bundle update
rake db:drop
rake db:setup
rake db:test:prepare
bundle exec guard




# Gem update
gem cleanup
bundle update




# Capistrano for non-initial deployment
# STAGING DEPLOYMENT
git checkout master
git merge work
git push
git push production
cap deploy

# Capistrano for non-initial deployment
# PRODUCTION DEPLOYMENT
git checkout master
git merge work
git push
git push production
cap production deploy
git tag "`date +published_%Y-%m-%d_%H%M%S`"
