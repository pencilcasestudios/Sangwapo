<% flash.each do |name, msg| %>
	<div class="notifications">
		<% if msg.is_a?(String) %>
		  <%= content_tag :div, class:  "alert-message #{name} fade in out", "data-alert" => "alert" do %>
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<%= msg %>
			<% end %>
		<% end %>
	</div>
<% end %>


