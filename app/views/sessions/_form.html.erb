<div id="sign_in_form">
	<%= form_tag sessions_path, class: "form-stacked" do %>
		<fieldset class="control-group">
			<fieldset class="control-group">
				<%= label_tag :identifier, t("views.sessions._form.labels.identifier"), class: "control-label" %>
				<div class="controls"><%= text_field_tag :identifier, params[:identifier], class: "xlarge" %></div>

				<%= label_tag :password, t("views.sessions._form.labels.password"), class: "control-label" %>
				<div class="controls"><%= password_field_tag :password, nil, class: "xlarge" %></div>
			</fieldset>

			<p>
				<%= t("views.sessions._form.copy.no_account") %><br />
				<%= link_to t("views.sessions._form.copy.sign_up_for_an_account"), sign_up_path %><%= t("views.application.copy.full_stop") %>
			</p>
			
		  <div class="actions form-actions">
				<%= submit_tag t("views.sessions._form.buttons.submit"), class: "btn large primary" %>
			</div>
		</fieldset>
	<% end %>
</div>
