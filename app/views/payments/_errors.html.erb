<% if @payment.errors.any? %>
  <div id="error_explanation" class="alert alert-block alert-error">
	  <a class="close" data-dismiss="alert" href="#">&times;</a>

    <h2><%= t("views.payments._errors.title") %></h2>

    <ul>
			<% if @payment.errors[:to].present? %>
				<% @payment.errors[:to].each do |message| %>
					<li><%= t("views.payments._errors.fields.to") %> <%= message %></li>
				<% end %>
			<% end %>

			<% if @payment.errors[:method].present? %>
				<% @payment.errors[:method].each do |message| %>
					<li><%= t("views.payments._errors.fields.method") %> <%= message %></li>
				<% end %>
			<% end %>
		</ul>
	</div>
<% end %>
