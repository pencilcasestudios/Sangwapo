html {
	/*
		Hack to fix non-tiling background.
		https://groups.google.com/d/topic/twitter-bootstrap/fzLstFf7KH0/discussion
	*/
	background-color: transparent;
}

body {
	padding-top: 40px;
	background: #950085;
}

header {
	padding-bottom: 2em;
}

footer p {
	font-size: 0.9em;
	line-height: 1.2em;
}

footer a {
	color: #ff64d2;
}

footer a:hover {
	color: #eeeeee;
}

.translation_missing {
	/* Visual cue to translate text */
	background: #ff0000;
}

.notifications {
	margin-top: 1em;
}

#content_pane {
	background: #ffffff;
  padding: 1em 1em 1em;
  margin: -1em -1em 1em;
}

#control_pane {
	position: fixed;
	color: #cccccc;
}

#control_pane h1 {
	color: #ffffff;
  text-shadow: 0 1px 0 #333333;
	font-size: 3em;
	line-height: 1.5em;
}

@media screen and (max-width: 768px) {
	#control_pane {
		position: relative;
	}
}
